{
  "name": "testing-project",
  "version": "1.0.0",
  "description": "Automated testing pipeline",
  "main": "index.js",
  "scripts": {
    "test:unit": "jest --coverage --testResultsProcessor jest-junit",
    "test:integration": "mocha tests/integration --reporter mocha-junit-reporter || echo 'No integration tests found'",
    "test:api": "jest --coverage --testResultsProcessor jest-junit",
    "test:e2e": "xvfb-run --auto-servernum cypress run --reporter junit --reporter-options 'mochaFile=tests/results/e2e-results.xml'",
    "lint": "eslint ."
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mocha": "^11.1.0",
    "cypress": "^13.0.0",
    "supertest": "^6.3.0",
    "mocha-junit-reporter": "^2.0.2",
    "jest-junit": "^16.0.0",
    "eslint": "^8.49.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "reporters": ["default", "jest-junit"],
    "testResultsProcessor": "jest-junit"
  }
}
